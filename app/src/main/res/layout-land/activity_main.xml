<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/etShowValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="60sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-2pt">

            <Button
                android:id="@+id/buAC"
                android:layout_width="wrap_content"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="AC"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buPlusMin"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buPercent"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:onClick="buPercent"
                android:text="%"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:onClick="buOpEvent"
                android:text="/"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-2pt">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buMul"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:onClick="buOpEvent"
                android:text="x" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-2pt">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buMinus"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:onClick="buOpEvent"
                android:text="-"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-2pt">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buSum"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:onClick="buOpEvent"
                android:text="+"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-2pt">

            <Button
                android:id="@+id/bu0"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="1pt"
                android:layout_weight="2.5"
                android:onClick="buNumberEvent"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buDot"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="."
                android:textSize="20sp" />

            <Button
                android:id="@+id/buEqual"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginLeft="3pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:onClick="buEqualEvent"
                android:text="="
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>
</LinearLayout>